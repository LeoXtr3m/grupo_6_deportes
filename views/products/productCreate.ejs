<!DOCTYPE html>
<html lang="es-MX">
    
    <%- include('../partials/head') %>

    <nav>
        <%- include('../partials/header') %>
    </nav>

    <body>

    <main class="m2">
        <div class="register">CREAR PRODUCTO</div>
        
        <form action="/products/create" method="POST"  enctype="multipart/form-data"> 

            <div>
                <input class="formu_individual" type="text" name="nameProductoNew" id="nameProductoNew" placeholder="Nombre del producto" value="<%= locals.old && old.nameProductoNew ? old.nameProductoNew : '' %>" required>
            </div>

            <% if(locals.errors && errors.nameProductoNew){ %>  <!-- Si la variable "usuarioLogeado viene vacia, NO ENTRA"-->
            <p  class="createProductError"><%= errors.nameProductoNew.msg %></p>
             <% } %> 

           
            <div class="seleccion">
                <span class="rectangulos">
                    <div>
                        <h3>Categoria</h3> 
                    </div>
                         <div>
                            <label >
                                <select name="deporte">
                                    <optgroup label="Deportes">
                                        <% for (let genero of generos) { %> 
                                        <option value="<%= genero.id %>"><%= genero.nombre %></option> 
                                        <% } %>
                                    </optgroup>

                                </select>   
                            </label> 
                        </div>
                </span>
                <!--<input class="formu" type="text" name="CategoryProductNew" id="CategoryProductNew" placeholder="Categoria" required>-->
                <span class="rectangulos">
                    <div>
                        <h3> Tipo de producto</h3>
                    </div>  
                    <div>                
                        <label for="CategoryProductNew" class=selector_tipo>
                            <input type="radio" name="CategoryProductNew" >Vestuario
                            <input type="radio" name="CategoryProductNew" >Equipo
                        </label>
                    </div>  
                </span>
           
            </div>



            <div class="form1">
                <div>
                    <label for="precio" ></label>
                    <input class="formu"type="text" name="precio" id="precio" placeholder="Precio" value="<%= locals.old && old.precio ? old.precio : '' %>" required>
                </div>
    
                <div>
                    <label for="descuento" ></label>
                    <input class="formu"type="text" name="descuento" id="descuento" placeholder="Descuento" value="<%= locals.old && old.descuento ? old.descuento : '' %>" required>
                </div>    

                <div>
                    <label for="cantidad" ></label>
                    <input class="formu"type="text" name="cantidad" id="cantidad" placeholder="Cantidad" value="<%= locals.old && old.cantidad ? old.cantidad : '' %>" required>
                </div>  
            </div>

            <% if(locals.errors && errors.precio){ %>  <!-- Si la variable "usuarioLogeado viene vacia, NO ENTRA"-->
            <p  class="createProductError"><%= errors.precio.msg %></p>
             <% } %> 

             
            <% if(locals.errors && errors.descuento){ %>  <!-- Si la variable "usuarioLogeado viene vacia, NO ENTRA"-->
            <p  class="createProductError"><%= errors.descuento.msg %></p>
             <% } %> 

             
            <% if(locals.errors && errors.cantidad){ %>  <!-- Si la variable "usuarioLogeado viene vacia, NO ENTRA"-->
            <p  class="createProductError"><%= errors.cantidad.msg %></p>
             <% } %> 

            <div>
                <label for="imagen" ></label>
                <input class="formu_individual" type="file" name="imagen" id="imagen" placeholder="Imagen del producto" required>
            </div>    
            
            <% if(locals.errors && errors.imagen){ %>  <!-- Si la variable "usuarioLogeado viene vacia, NO ENTRA"-->
            <p  class="createProductError"><%= errors.imagen.msg %></p>
             <% } %> 

            <div>
                <label for="descripcion" ></label>
                <input class="formu_description"type="text" name="descripcion" id="descripcion" placeholder="Descripcion" value="<%= locals.old && old.descripcion ? old.descripcion : '' %>" required>
            </div>    

            <% if(locals.errors && errors.descripcion){ %>  <!-- Si la variable "usuarioLogeado viene vacia, NO ENTRA"-->
            <p  class="createProductError"><%= errors.descripcion.msg %></p>
             <% } %> 


            <div class=boton_Crear>
                <button type="submit">Crear</button> 
            </div>

            <div class="inicio"><a href="/login">Iniciar sesion</a></div>
        </form>
    </main>

    </body>

    <%- include('../partials/footer') %>
    
</html>