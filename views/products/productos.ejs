        <section class="section_1">
        
                <% for (let producto of productos) { %> 			 <!--  SE LEEN TODOS LOS PRODUCTOS QUE ESTAN EN EL productsDataBase.JSON -->
                    <%if(producto.tipe == 1){%>
                            <article class="productos">
