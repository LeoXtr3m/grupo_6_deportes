    <header>
        <article class="header">

             <div class="bloque_1">
                    <span class="Logotipo">
                        <img width="70vw" src="/images/Logotipo.png" alt="">   <!-- LOGOTIPO -->
                    </span>

                    <span>
                        <a href="/"><i class="fas fa-home"></i></a>        <!-- Casita de HOME -->
                    </span>

                    <span>
                        <button class="categorias">Categorias</button>                             <!-- Boton de categorias  -->
                    </span>

                    <div class="Barra_de_busqueda2">
                        <form action="/search" method="GET" class="search-form">
                            <input type="text" name="keywords" placeholder="Buscar productos, marcas" class="search-form_input">
                            <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                        </form>
                    </div>


                    <span class="carrito">
                        <a href="/productCart"> <i class="fas fa-shopping-cart"></i></a> <!-- Carrito de mercado libre  -->
                    </span>
                    

                    <!-- /////////////////// SI YA INICIARON SESION SE VE ESTO   ///////////////////-->
                    <% if (locals.isLogged == true){ %>  <!-- Si la variable "errors viene vacia, NO ENTRA"-->
