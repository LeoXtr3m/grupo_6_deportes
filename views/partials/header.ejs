                            <span>
                                <span>
                                    <a href="/login"><i class="fas fa-user-circle"></i></a>   
                                </span> 
                            </span>
                            <span>
                                <span>
                                    <a href="/login"><h3 class="iniciar_sesios">Iniciar Sesion</h3> </a>     
                                </span>  
                                <span>
                                    <a href="/register"><h3 class="iniciar_registro">Registrarse</h3></a>      
                                </span> 
                            </span>  
                         </div> 





                        <% } %> 
             </div>

        </article>

    </header>
