    <body>

    <main class="m2">
        <div class="register">REGISTRATE</div>
        
        <form action="/" method="GET">

            <div class="form1">
                <div>
                    <input class="formu" type="text" name="nombre" id="nombre" placeholder="Nombre" required>
                </div>
    
                <div>
                    <input class="formu" type="text" name="apellido" id="apellido" placeholder="Apellido" required>
                </div>
            </div>

            <div>
                <input class="formu" type="email" name="correo" id="correo" placeholder="Correo" required>
            </div>

            <div class="form1">
                <div>
                    <input class="formu"type="password" name="contraseña" id="contraseña" placeholder="Contraseña" required>
                </div>
    
                <div>
                    <input class="formu"type="password" name="contraseña" id="contraseña2" placeholder="Confirma contraseña" required>
                </div>    
            </div>

            <div>
                <input class="formu"type="text" name="pais" id="pais" placeholder="Pais" required>
            </div>

            <div class="boton"> 
                <button type="submit">Resgistrate</button>
            </div>

            <div class="inicio"><a href="/login">Iniciar sesion</a></div>
        </form>
    </main>

